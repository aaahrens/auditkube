make kube-deploy ENV=prod

# deploy notifications
MSG="Deployed $SHORT_SHA <%= PROJECT %> to prod"
curl -X POST -H 'Content-type: application/json' --data '{"text": "'"$MSG"'"}' $SLACK_WEBHOOK

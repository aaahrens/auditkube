apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: <%= kube_name(@app) %>
  labels:
    app: <%= kube_name(@app) %>
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: <%= kube_name(@app) %>
    spec:
      volumes:
      - name: <%= secrets_name %>
        secret:
          secretName: <%= secrets_name %>
      containers:
      - name: <%= kube_name(@app) %>
        image: <%= image_name(@app) %>:latest
        ports:
        - containerPort: <%= PORT %>
        volumeMounts:
        - name: <%= secrets_name %>
          mountPath: /etc/secrets
          readOnly: true
